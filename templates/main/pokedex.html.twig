{% extends 'base.html.twig' %}

{% block body %}
    {% include 'include/header.html.twig' %}


    <main>

        <nav>




            <a href="{{ path('main_tri_alpha',{'typeTrie':'asc'}) }}"><button>Trier par A>Z</button></a>
            <a href="{{ path('main_tri_alpha',{'typeTrie':'desc'}) }}"><button>Trier par Z>A</button></a>
            <a href="{{ path('main_tri_capt',{'tri':1}) }}"><button>Trier par Pokémon capturé</button></a>
            <a href="{{ path('main_tri_capt',{'tri':0}) }}"><button>Trier par Pokémon non capturé</button></a>
            <a href="{{ path('main_pokedex')}}"><button>Trier par Id</button></a>

            <br>

       {#    <a href="{{ path('main_ajouterPokemon') }}"><button>Ajouter Pokemon</button></a>     #}
        </nav>

        <div class="pokedexStyle">





            {% for pokemon in pokedex %}

                <div class="cardPokemon">
                    <img src="{{ asset('img/pokemon/'~pokemon.image) }}"  alt="image du pokémon : {{ pokemon.nom }} " class="imgPokemon">
                    <div class="container">
                        <a href="{{ path('main_pokemon',{'id':pokemon.id()}) }}">
                            <b> {{ pokemon.nom }}</b>
                        </a>

                            <div id="catchjs" onclick="messageCatch()">
                            <a href="{{ path('main_capture',{'id':pokemon.id()}) }}">
                                <img class="imgcatch" id="imgcatch" src="{{ (pokemon.estCapture) ? asset('img/icon/pokeball-ok.jpg') : asset('img/icon/pokeball-ko.jpg') }}" alt="">
                            </a>
                            </div>

                         </div>
                </div>


        {% endfor %}

        </div>






    </main>

{% endblock %}

{% block title %}
{{ parent() }} - Pokédex
{% endblock %}


